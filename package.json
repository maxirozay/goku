{
  "name": "goku",
  "version": "0.0.0",
  "description": "CSS Framework",
  "main": "index.js",
  "repository": "git@github.com:maxirozay/goku.git",
  "contributors": [
    "Maxime Rossier <rossier.maxime@gmail.com>",
    "Julien Gr√ºnhagel <julien@rspt.ch>"
  ],
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "rm -r docs/css/* && postcss css/** --watch --dir docs/css/ --base css/",
    "docs": "yarn dev & browser-sync start --ss 'docs' --files 'docs'",
    "build": "yarn clean && postcss css/** --dir dist/ --base css/ && cp -R dist/* docs/css/",
    "clean": "rm -r dist/* docs/css/*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build && git add dist docs/css"
    }
  },
  "devDependencies": {
    "autoprefixer": "^8.1.0",
    "browser-sync": "^2.23.6",
    "cssnano": "^3.10.0",
    "husky": "^0.15.0-rc.9",
    "postcss-cli": "^5.0.0",
    "stylelint": "^9.1.1",
    "stylelint-config-standard": "^18.2.0"
  }
}
